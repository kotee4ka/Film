<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
  
<mapper namespace="films"> 
 
    <resultMap id = "result" type = "films.model.Films"> 
       <result property = "id" column = "id"/> 
       <result property = "name" column = "name"/> 
       <result property = "description" column = "description"/> 
       <result property = "genre" column = "genre"/> 
       <result property = "date" column = "date"/> 
       <result property = "image" column = "image"/> 
    </resultMap> 
 
    <select id = "selectAll" resultMap = "result"> 
       SELECT * FROM films;  
    </select> 

    <select id = "selectById" parameterType = "int" resultMap = "result"> 
       SELECT * FROM films WHERE id = #{id}; 
    </select> 

    <update id = "update" parameterType = "films.model.Films"> 
       UPDATE films SET 
        name = #{name}, 
        description = #{description} ,
        image= #{image},
        date = #{date} , 
        genre_id = #{genre_id}
        WHERE id = #{id}; 
    </update> 
  
    <delete id = "deleteById" parameterType = "int"> 
       DELETE from films WHERE id = #{id}; 
    </delete> 

    <insert id = "insert" parameterType = "films.model.Films"> 
       INSERT INTO films (name, description, image, date, genre_id)  
       VALUES (#{name}, #{description},#{genre},#{image}, #{date}, #{genre_id});     
    </insert>
</mapper> 
